<h1>Hello world!</h1>

<%= form_tag("/reports/index", method: "get") do %>
  <%= label_tag(:q, "Mailbox ID:") %>
  <%= text_field_tag(:q) %>
  <%= label_tag(:r, "Tag:") %>
  <%= text_field_tag(:r) %>
  <%= submit_tag("Get") %>
<% end %>

<% if user_signed_in? %>
  <li>
  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>        
  </li>
<% else %>
  <li>
  <%= link_to('Login', new_user_session_path)  %>  
  </li>
<% end %>