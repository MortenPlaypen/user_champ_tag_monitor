<div id="main-container" class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="page-header">
        <h1><%=t ".title", default: "Create your first report" %></h1>
      </div>
    </div>

  </div>

  <div class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal form-user"}) do |f| %>
      
      <div class="form-group">
        <%= f.label :email, class: "control-label col-md-4" %>
        <div class="col-md-4">
          <%= f.email_field :email, class: "text-field form-control", html: {spellcheck: "false"} %>
        </div>
      </div>
    
      <div class="form-group">
        <%= f.label :password, class: "control-label col-md-4" %>
        <div class="col-md-4">
          <%= f.password_field :password, class: "text-field form-control", html: {autocomplete: "off"} %>
        </div>
      </div>
     
      <div class="form-group">
        <%= f.label :password_confirmation, "Password Confirmation", class: "control-label col-md-4" %>
        <div class="col-md-4">
          <%= f.password_field :password_confirmation, class: "text-field form-control", html: {autocomplete: "off"} %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :helpscout_token, "HelpScout API Key", class: "control-label col-md-4" %>
        <div class="col-md-4">
          <%= f.text_field :helpscout_token, class: "text-field form-control", html: {autocomplete: "off"} %>
          <a href="http://developer.helpscout.net/help-desk-api/#generating-an-api-key" target="_blank">"Where do I find my HelpScout API key?"</a>
        </div>
      </div>

      <div class="col-md-12 col-md-offset-4">
        <%= devise_error_messages! %>
      </div>

      <div class="form-group">
        <div class="col-md-offset-4 col-md-6">
          <%= f.submit "Next: Pick mailbox and tag >", class: "btn btn-primary" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-4 col-md-6">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>